<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BackgroundCancel">
        <item name="android:background">@drawable/bg_cancel</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="textAllCaps">false</item>
        <item name="android:textAlignment">center</item>
        <item name="fontFamily">@font/ubuntu_bold</item>
        <item name="android:textColor">@color/primary_0</item>
    </style>

    <style name="ButtonPrimary">
        <item name="android:background">@drawable/bg_submit</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="textAllCaps">false</item>
        <item name="android:textAlignment">center</item>
        <item name="fontFamily">@font/ubuntu_bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ButtonPrimaryState">
        <item name="android:background">@drawable/bg_submit_state</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="textAllCaps">false</item>
        <item name="android:textAlignment">center</item>
        <item name="fontFamily">@font/ubuntu_bold</item>
        <item name="android:textColor">@color/button_text_color_state</item>
    </style>

    <style name="BottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowSoftInputMode">adjustResize|stateVisible</item>
        <item name="android:colorBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">false</item>
    </style>
</resources>