<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="vm"
            type="id.bluebird.mall.feature_queue_fleet.request_fleet.RequestFleetDialogViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_bottom_sheet"
        android:paddingStart="16dp"
        android:paddingTop="24dp"
        android:paddingEnd="16dp"
        android:paddingBottom="24dp">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/titleRequestFleetDialog"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/ubuntu_bold"
            android:text="@string/request_fleet"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/crossRequestFleetDialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="@{() -> vm.cancelFleetDialog()}"
            android:padding="10dp"
            android:src="@drawable/ic_cross"
            app:layout_constraintBottom_toBottomOf="@id/titleRequestFleetDialog"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/titleRequestFleetDialog" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/mainCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:gravity="center"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/crossRequestFleetDialog">

            <androidx.appcompat.widget.AppCompatImageButton
                bindButton="@{vm.counter}"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@drawable/bg_request_add_fleet"
                android:onClick="@{() -> vm.minusCounter()}"
                android:padding="10dp"
                android:src="@drawable/ic_minus_enable" />

            <androidx.appcompat.widget.AppCompatEditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/bg_stock_request"
                android:fontFamily="@font/ubuntu_bold"
                android:inputType="number"
                android:paddingStart="31dp"
                android:paddingTop="12dp"
                android:paddingEnd="31dp"
                android:paddingBottom="12dp"
                android:text="@{String.valueOf(vm.counter)}"
                android:textSize="16sp" />

            <androidx.appcompat.widget.AppCompatImageButton
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@drawable/bg_request_add_fleet"
                android:onClick="@{() -> vm.addCounter()}"
                android:padding="8dp"
                android:src="@drawable/ic_request_add" />

        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/addFleet"
            style="@style/BackgroundCancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:onClick="@{() -> vm.requestFleet()}"
            android:text="@string/add"
            android:textAllCaps="false"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/mainCount" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
