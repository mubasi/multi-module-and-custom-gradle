<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <import type="id.bluebird.mall.feature_monitoring.main.MonitoringState"/>

        <variable
            name="isNotificationVisible"
            type="Boolean" />

        <variable
            name="state"
            type="id.bluebird.mall.feature_monitoring.main.MonitoringState" />

        <variable
            name="vm"
            type="id.bluebird.mall.feature_monitoring.main.MonitoringViewModel" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true">

        <LinearLayout
            android:id="@+id/notification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/primary_4"
            android:orientation="horizontal"
            android:paddingStart="16dp"
            app:show="@{vm.notificationVisibility.booleanValue()}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/UbuntuRegularGraySubtle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:drawablePadding="5dp"
                android:gravity="center_vertical"
                android:paddingVertical="12dp"
                android:layout_weight="7"
                android:text="@string/monitoring_hint"
                app:drawableStartCompat="@drawable/ic_info" />

            <ImageButton
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:onClick="@{() -> vm.toggleNotificationVisibility()}"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_cross_gray"
                tools:ignore="ContentDescription" />
        </LinearLayout>

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:show="@{state instanceof MonitoringState.OnProgressGetList}"
            app:layout_constraintTop_toBottomOf="@id/notification"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <com.evrencoskun.tableview.TableView
            android:id="@+id/tableView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:show_horizontal_separator="false"
            app:show_vertical_separator="false"
            app:show="@{!(state instanceof MonitoringState.OnProgressGetList)}"
            app:layout_constraintTop_toBottomOf="@id/notification"
            app:layout_constraintStart_toStartOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>