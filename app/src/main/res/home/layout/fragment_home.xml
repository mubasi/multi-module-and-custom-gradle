<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="vm"
            type="id.bluebird.mall.officer.ui.home.HomeViewModel" />

        <import type="id.bluebird.mall.officer.common.HomeState" />

        <import type="id.bluebird.mall.officer.common.CommonState" />

        <import type="android.view.View" />
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/coordinator_root_home"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appBar_home"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/toolbar_background">

            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:layout_width="match_parent"
                android:layout_height="145dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:layout_collapseMode="parallax"
                    app:layout_collapseParallaxMultiplier="0.5">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/toolbar_main_patter"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:id="@+id/ll_title_home"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/sixty_dp"
                            android:orientation="vertical"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toLeftOf="@id/ll_title_action_home"
                            app:layout_constraintTop_toTopOf="parent">

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/tv_title_location_home"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/ubuntu_regular"
                                android:text="@{vm.locationName}"
                                android:textColor="@android:color/white" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/tv_title_sub_location_name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:fontFamily="@font/ubuntu_bold"
                                android:text="@{vm.subLocationName}"
                                android:textColor="@android:color/white"
                                android:textSize="@dimen/sixty_sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ll_title_action_home"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="16dp"
                            android:gravity="end"
                            android:orientation="horizontal"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintLeft_toRightOf="@id/ll_title_home"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toTopOf="parent">

                            <androidx.appcompat.widget.AppCompatImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="20dp"
                                android:onClick="@{() -> vm.dummyIndicator()}"
                                android:src="@{vm.connectionState ? @drawable/ic_connection_status : @drawable/ic_disconnection_status}" />

                            <androidx.appcompat.widget.AppCompatImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:onClick="@{() -> vm.logout()}"
                                android:src="@drawable/ic_logout" />

                        </LinearLayout>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.appcompat.widget.Toolbar
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    app:layout_collapseMode="pin" />
            </com.google.android.material.appbar.CollapsingToolbarLayout>
        </com.google.android.material.appbar.AppBarLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="48dp"
            app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_main_body_home"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/sixty_dp"
                android:paddingStart="@dimen/sixty_dp"
                android:paddingEnd="@dimen/sixty_dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/appBar_home">

                <LinearLayout
                    android:id="@+id/ll_sync_home"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_sync"
                    android:orientation="horizontal"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    app:layout_constraintBottom_toTopOf="@id/ll_search_queue_main"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="7"
                        android:fontFamily="@font/ubuntu_regular"
                        android:gravity="center_vertical"
                        android:text="@{vm.lastSync}"
                        android:textColor="@color/primary_color" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:layout_width="0dp"
                        android:layout_height="32dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginTop="12dp"
                        android:layout_marginBottom="12dp"
                        android:layout_weight="3"
                        android:background="@drawable/bg_btn_sync"
                        android:fontFamily="@font/ubuntu_bold"
                        android:onClick="@{() -> vm.sync()}"
                        android:text="@string/sycn"
                        android:textAllCaps="false"
                        android:textColor="@color/primary_color" />

                </LinearLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/ll_search_queue_main"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_marginTop="@dimen/sixty_dp"
                    android:background="@drawable/bg_search_queue_home"
                    android:paddingStart="@dimen/sixty_dp"
                    android:paddingEnd="@dimen/eight_dp"
                    app:layout_constraintBottom_toTopOf="@id/cl_counter_home"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/ll_sync_home">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/imv_ic_search_home"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_search"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_sub_location_initial_search_home"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:layout_marginStart="@dimen/eight_dp"
                        android:layout_marginBottom="3dp"
                        android:text="@{vm.subLocationInitial}"
                        android:textColor="@color/gray_subtitle"
                        android:textSize="21sp"
                        app:fontFamily="@font/ubuntu_regular"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toRightOf="@id/imv_ic_search_home"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/edt_search_queue_main"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:background="@null"
                        android:onTextChanged="@{(text, start, before, count) -> vm.onSearchTextChanged(text)}"
                        android:fontFamily="@font/ubuntu_regular"
                        android:hint="@string/search_number_queue_hint"
                        android:imeOptions="actionSearch"
                        android:inputType="number"
                        android:lines="1"
                        android:maxLength="4"
                        android:maxLines="1"
                        android:text="@={vm.searchQueue}"
                        android:textColor="@color/gray_subtitle"
                        android:textSize="21sp"
                        app:VmBinding="@{vm}"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toRightOf="@id/tv_sub_location_initial_search_home"
                        app:layout_constraintRight_toLeftOf="@id/imv_close_search_home"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/imv_close_search_home"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="@{() -> vm.clearSearchQueue()}"
                        android:padding="8dp"
                        android:src="@drawable/ic_cross"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:show="@{vm.searchQueue.length &gt; 0}" />

                </androidx.constraintlayout.widget.ConstraintLayout>


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cl_counter_home"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/sixty_dp"
                    app:layout_constraintBottom_toTopOf="@id/ll_main_body_home"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/ll_search_queue_main">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/cl_counter_done_home"
                        android:layout_width="0dp"
                        android:layout_height="80dp"
                        android:background="@drawable/bg_search_queue_home"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toRightOf="@id/cl_counter_delay_home"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tv_title_counter_done_home"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/eight_dp"
                            android:layout_marginTop="6dp"
                            android:fontFamily="@font/ubuntu_bold"
                            android:text="@string/done"
                            android:textColor="@color/gray_subtitle"
                            app:layout_constraintLeft_toRightOf="@id/view_done_counter_home"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:layout_marginBottom="@dimen/eight_dp"
                            android:fontFamily="@font/ubuntu_bold"
                            android:text="@{String.valueOf(vm.counter.success)}"
                            android:textColor="@color/success_color"
                            android:textSize="20sp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintLeft_toLeftOf="@id/tv_title_counter_done_home"
                            app:layout_constraintRight_toRightOf="@id/tv_title_counter_done_home" />

                        <View
                            android:id="@+id/view_done_counter_home"
                            android:layout_width="4dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/bg_counter_done_home"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/cl_counter_delay_home"
                        android:layout_width="0dp"
                        android:layout_height="80dp"
                        android:layout_marginStart="12dp"
                        android:layout_marginEnd="12dp"
                        android:background="@drawable/bg_search_queue_home"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toRightOf="@id/cl_counter_queue_home"
                        app:layout_constraintRight_toLeftOf="@id/cl_counter_done_home"
                        app:layout_constraintTop_toTopOf="parent">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tv_title_counter_delay_home"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/eight_dp"
                            android:layout_marginTop="6dp"
                            android:fontFamily="@font/ubuntu_bold"
                            android:text="@string/delay"
                            android:textColor="@color/gray_subtitle"
                            app:layout_constraintLeft_toRightOf="@id/view_counter_delay_home"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:layout_marginBottom="@dimen/eight_dp"
                            android:fontFamily="@font/ubuntu_bold"
                            android:text="@{String.valueOf(vm.counter.delay)}"
                            android:textColor="@color/rating_color"
                            android:textSize="20sp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintLeft_toLeftOf="@id/tv_title_counter_delay_home"
                            app:layout_constraintRight_toRightOf="@id/tv_title_counter_delay_home" />

                        <View
                            android:id="@+id/view_counter_delay_home"
                            android:layout_width="4dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/bg_counter_delay_home"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/cl_counter_queue_home"
                        android:layout_width="0dp"
                        android:layout_height="80dp"
                        android:background="@drawable/bg_search_queue_home"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toLeftOf="@id/cl_counter_delay_home"
                        app:layout_constraintTop_toTopOf="parent">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tv_title_counter_queue_home"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/eight_dp"
                            android:layout_marginTop="6dp"
                            android:fontFamily="@font/ubuntu_bold"
                            android:text="@string/number_of_queue"
                            android:textColor="@color/gray_subtitle"
                            app:layout_constraintLeft_toRightOf="@id/view_counter_queue_home"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:layout_marginBottom="@dimen/eight_dp"
                            android:fontFamily="@font/ubuntu_bold"
                            android:text="@{String.valueOf(vm.counter.queue)}"
                            android:textColor="@color/primary_color"
                            android:textSize="20sp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintLeft_toLeftOf="@id/tv_title_counter_queue_home"
                            app:layout_constraintRight_toRightOf="@id/tv_title_counter_queue_home" />

                        <View
                            android:id="@+id/view_counter_queue_home"
                            android:layout_width="4dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/bg_counter_queue_home"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <include
                    android:id="@+id/ll_main_body_home"
                    layout="@layout/content_main"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/cl_counter_home"
                    app:vm="@{vm}" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.core.widget.NestedScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#B3EEEEEE"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="@{vm.homeState instanceof HomeState.OnSync? View.VISIBLE : View.GONE,default=gone }"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="120dp" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/ubuntu_regular"
                android:gravity="center_horizontal"
                android:text="@string/sync_on_progress"
                android:textColor="@color/primary_color" />

        </LinearLayout>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>
