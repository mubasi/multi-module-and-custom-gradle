<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <import type="id.bluebird.vsm.feature.monitoring.main.MonitoringState" />

        <variable
            name="isNotificationVisible"
            type="Boolean" />

        <variable
            name="state"
            type="id.bluebird.vsm.feature.monitoring.main.MonitoringState" />

        <variable
            name="vm"
            type="id.bluebird.vsm.feature.monitoring.main.MonitoringViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/card_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/btn_back"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:onClick="@{() -> vm.backSearchScreen()}"
                android:layout_gravity="center"
                android:layout_marginHorizontal="14dp"
                android:backgroundTint="@android:color/transparent"
                android:src="@drawable/ic_arrow_back" />

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/search_page"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="16dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/bg_stock_request"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:layout_marginBottom="12dp"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/search_form"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="7"
                    android:background="@null"
                    android:drawableStart="@drawable/ic_search"
                    android:drawablePadding="16dp"
                    android:fontFamily="@font/ubuntu_regular"
                    android:hint="@string/enter_name_location"
                    android:imeOptions="actionDone"
                    android:lines="1"
                    android:maxLength="7"
                    android:maxLines="1"
                    android:text="@={vm.params}"
                    android:paddingStart="8dp"
                    android:textSize="16sp" />

                <ImageButton
                    android:id="@+id/clear_search"
                    style="?android:buttonBarButtonStyle"
                    android:paddingBottom="5dp"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/ic_cross_gray"
                    android:layout_width="24dp"
                    android:layout_height="24dp" />

            </androidx.appcompat.widget.LinearLayoutCompat>

        </androidx.appcompat.widget.LinearLayoutCompat>

        <LinearLayout
            android:id="@+id/notification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/primary_4"
            android:orientation="horizontal"
            android:paddingStart="16dp"
            app:layout_constraintTop_toBottomOf="@+id/card_toolbar"
            app:show="@{vm.notificationVisibility.booleanValue()}">

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/UbuntuRegularGraySubtle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="7"
                android:drawablePadding="5dp"
                android:gravity="center_vertical"
                android:paddingVertical="12dp"
                android:text="@string/monitoring_hint"
                app:drawableStartCompat="@drawable/ic_info" />

            <ImageButton
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:onClick="@{() -> vm.toggleNotificationVisibility()}"
                android:src="@drawable/ic_cross_gray"
                tools:ignore="ContentDescription" />
        </LinearLayout>

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/notification"
            app:show="@{state instanceof MonitoringState.OnProgressGetList}" />

        <com.evrencoskun.tableview.TableView
            android:id="@+id/tableView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/notification"
            app:show="@{!(state instanceof MonitoringState.OnProgressGetList)}"
            app:show_horizontal_separator="false"
            app:show_vertical_separator="false" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>