<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="value"
            type="String" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="@dimen/default_row_header_width"
        android:layout_height="@dimen/default_column_header_height">

        <LinearLayout
            android:id="@+id/action_sort"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/primary_0"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/column_header_textView"
                style="@style/UbuntuBoldWhite"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="4"
                android:gravity="center"
                tools:text="@{value}" />

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/column_header_button"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@android:color/transparent"
                android:scaleType="fitXY"
                android:visibility="gone"
                app:srcCompat="@drawable/ic_arrow_up_white"/>

        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="16dp"
            android:background="@color/gray_line"
            android:layout_marginTop="6dp"
            app:layout_constraintVertical_bias="0"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>