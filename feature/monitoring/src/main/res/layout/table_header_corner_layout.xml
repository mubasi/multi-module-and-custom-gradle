<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="value"
            type="String" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="@dimen/default_row_header_width"
        android:layout_height="@dimen/default_column_header_height">

    <LinearLayout
        android:id="@+id/action_sort"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="@color/primary_0"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/column_header_textView"
            style="@style/UbuntuBoldWhite"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="4"
            android:gravity="center"
            tools:text="@{value}" />

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/column_header_button"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:background="@android:color/transparent"
            android:gravity="center"
            android:scaleType="fitXY"
            android:visibility="gone"
            app:srcCompat="@drawable/ic_arrow_up_white" />

    </LinearLayout>

    <View
        android:layout_width="1dp"
        android:layout_height="16dp"
        android:layout_marginTop="6dp"
        android:background="@color/gray_line"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>