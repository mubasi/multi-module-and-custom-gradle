<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="value"
            type="String" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="@dimen/default_row_header_width"
        android:layout_height="@dimen/default_column_header_height">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/primary_0">
            <androidx.appcompat.widget.AppCompatTextView
                style="@style/UbuntuBoldWhite"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginVertical="@dimen/table_header_vertical_padding"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:maxLines="2"
                tools:text="Total Antrean Armada"
                android:ellipsize="end"
                android:background="@color/primary_0"
                android:text="@{value}" />
        </FrameLayout>


        <View
            android:layout_width="1dp"
            android:layout_height="16dp"
            android:background="@color/gray_line"
            android:layout_marginTop="6dp"
            app:layout_constraintVertical_bias="0"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>