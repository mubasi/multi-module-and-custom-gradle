<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>
        <variable
            name="vm"
            type="id.bluebird.vsm.feature.monitoring.edit_buffer.EditBufferViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_bottom_sheet"
        android:paddingStart="16dp"
        android:paddingTop="24dp"
        android:paddingEnd="16dp"
        android:paddingBottom="24dp">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/titleRequestFleetDialog"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/ubuntu_bold"
            android:text="@string/set_buffer_amount"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/crossRequestFleetDialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:onClick="@{() -> vm.closeDialog()}"
            android:src="@drawable/ic_cross_gray"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:layout_constraintBottom_toBottomOf="@id/titleRequestFleetDialog"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/titleRequestFleetDialog" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/mainCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:gravity="center"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/crossRequestFleetDialog">

            <androidx.appcompat.widget.AppCompatImageButton
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@drawable/bg_add_button_state"
                android:padding="10dp"
                minusValue="@{vm.buffer}"
                android:onClick="@{() -> vm.reduceBuffer()}"
                android:src="@drawable/ic_minus_button_state" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/counterView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/bg_rounded_white"
                android:fontFamily="@font/ubuntu_bold"
                android:imeOptions="actionDone"
                android:inputType="number"
                android:maxLength="3"
                android:paddingStart="31dp"
                android:paddingTop="12dp"
                android:paddingEnd="31dp"
                android:paddingBottom="12dp"
                android:text="@={vm.buffer}"
                android:textCursorDrawable="@null"
                android:textSize="16sp" />

            <androidx.appcompat.widget.AppCompatImageButton
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@drawable/bg_add_btn"
                android:padding="8dp"
                android:onClick="@{() -> vm.addBuffer()}"
                android:src="@drawable/ic_add" />

        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/addFleet"
            style="@style/BackgroundCancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:text="@string/save"
            android:textAllCaps="false"
            android:onClick="@{() -> vm.saveBuffer()}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/mainCount" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
