<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="value"
            type="String" />

        <variable
            name="isColored"
            type="Boolean" />

        <variable
            name="model"
            type="id.bluebird.vsm.feature.monitoring.model.MonitoringModel" />

        <variable
            name="vm"
            type="id.bluebird.vsm.feature.monitoring.main.MonitoringViewModel" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="@dimen/default_row_header_width"
        android:layout_height="@dimen/cell_height">

        <FrameLayout
            android:id="@+id/frameLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@{isColored ? @color/primary_4 : @android:color/transparent}">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginVertical="6dp"
                android:layout_marginHorizontal="12dp"
                android:onClick="@{() -> vm.editBuffer(model)}"
                android:background="@drawable/bg_table_buffer">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/textInput"
                    style="@style/UbuntuMediumBlack"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginVertical="6dp"
                    android:layout_marginStart="8dp"
                    android:gravity="center_vertical"
                    app:layout_constraintEnd_toStartOf="@id/chevronUp"
                    app:layout_constraintStart_toStartOf="parent"
                    android:text="@{value}" />
                <ImageView
                    android:id="@+id/chevronUp"
                    bindVisibility="@{model.editableBuffer}"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_chevron_up"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="ContentDescription" />
                <ImageView
                    bindVisibility="@{model.editableBuffer}"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_chevron_down"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    tools:ignore="ContentDescription" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </FrameLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="16dp"
            android:background="@color/gray_line"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>