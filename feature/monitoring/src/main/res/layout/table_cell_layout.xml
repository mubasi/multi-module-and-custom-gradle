<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="value"
            type="String" />
        <variable
            name="subValue"
            type="String" />

        <variable
            name="isColored"
            type="Boolean" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="@dimen/default_row_header_width"
        android:layout_height="@dimen/cell_height">

        <LinearLayout
            android:id="@+id/frameLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:background="@{isColored ? @color/primary_4 : @android:color/transparent}">

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/UbuntuRegularGraySubtle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/table_header_vertical_padding"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:textStyle="bold"
                android:gravity="center_vertical"
                android:ellipsize="end"
                android:text="@{value}" />

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/UbuntuRegularGraySubtle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/table_header_vertical_padding"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:gravity="center_vertical"
                android:ellipsize="end"
                android:text="@{subValue}" />

        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="16dp"
            android:background="@color/gray_line"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>