<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="subLocationName"
            type="String" />

        <variable
            name="requestCount"
            type="int" />

        <import type="android.view.View" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="16dp">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="24dp"
            android:fontFamily="@font/ubuntu_regular"
            android:text="@{subLocationName}"
            android:textSize="16sp"
            android:gravity="center_vertical"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Terminal 1A" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/ubuntu_regular"
            android:text="@string/request_label"
            android:textColor="@color/warning_0"
            android:textSize="12sp"
            android:visibility="@{requestCount > 0 ? View.VISIBLE : View.INVISIBLE, default=invisible}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@id/tv_name"
            app:layout_constraintTop_toBottomOf="@id/tv_name" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:fontFamily="@font/ubuntu_regular"
            android:textColor="@color/warning_0"
            android:textSize="12sp"
            android:text="@{String.valueOf(requestCount)}"
            android:visibility="@{requestCount > 0 ? View.VISIBLE : View.INVISIBLE, default=invisible}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/tv_label"
            app:layout_constraintTop_toTopOf="@id/tv_label"
            tools:text="1" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>