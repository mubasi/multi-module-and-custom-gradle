<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="vmPerimeter"
            type="id.bluebird.vsm.feature.airport_fleet.dialog_request_stock.DialogButtomRequestStockViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_forgot_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_forgot_password_view"
        android:paddingStart="16dp"
        android:paddingTop="24dp"
        android:paddingEnd="16dp"
        android:paddingBottom="24dp">

        <View
            android:id="@+id/view_request"
            android:layout_width="24dp"
            android:layout_height="4dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/bg_bottom_sheet_view"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_title_request"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/ubuntu_bold"
            android:lineHeight="30sp"
            android:text="@string/request_armada"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/imv_close_request"
            app:layout_constraintTop_toBottomOf="@id/view_request" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imv_close_request"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginTop="14dp"
            android:padding="10dp"
            android:onClick="@{() -> vmPerimeter.cancelFleetDialog()}"
            android:src="@drawable/ic_close"
            app:layout_constraintLeft_toRightOf="@id/tv_title_request"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/view_request" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/ll_forgot_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:gravity="center"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_title_request">

            <androidx.appcompat.widget.AppCompatButton
                minimumRequest="@{vmPerimeter.requestTaxiCounter}"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:onClick="@{()-> vmPerimeter.subtractRequestFleet()}" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/counterView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/bg_stock_request"
                android:fontFamily="@font/ubuntu_bold"
                android:imeOptions="actionDone"
                android:inputType="number"
                android:maxLength="2"
                android:onClick="@{() -> vmPerimeter.focusableEnable()}"
                android:paddingStart="31dp"
                android:paddingTop="12dp"
                android:paddingEnd="31dp"
                android:paddingBottom="12dp"
                android:text="@={vmPerimeter.requestTaxiCounter}"
                android:textCursorDrawable="@null"
                android:textSize="16sp" />

            <androidx.appcompat.widget.AppCompatButton
                requestAddCounter="@{null}"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:enabled="true"
                android:onClick="@{()-> vmPerimeter.addRequestFleet()}" />
        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_submit_forgot_password"
            buttonBackgroundFleet="@{null}"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/ubuntu_bold"
            android:layout_marginTop="28dp"
            android:onClick="@{() -> vmPerimeter.sendFleetRequest()}"
            android:text="@string/request"
            android:textAllCaps="false"
            android:textSize="@dimen/standard_font_size"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ll_forgot_password"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
