<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="BackgroundCancel">
        <item name="android:background">@drawable/bg_cancel</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="textAllCaps">false</item>
        <item name="android:textAlignment">center</item>
        <item name="fontFamily">@font/ubuntu_bold</item>
        <item name="android:textColor">@color/primary_0</item>
    </style>

    <style name="ButtonPrimaryState">
        <item name="android:background">@drawable/bg_submit_state</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="textAllCaps">false</item>
        <item name="android:textAlignment">center</item>
        <item name="fontFamily">@font/ubuntu_bold</item>
        <item name="android:textColor">@color/button_text_color_state</item>
    </style>

    <style name="MyCardView" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.MaterialCardView.Cut
        </item>
    </style>

    <style name="ShapeAppearanceOverlay.MaterialCardView.Cut" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">8dp</item>
        <item name="cornerSizeTopLeft">8dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

    <style name="TabLayoutTextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>