<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>

        <variable
            name="vm"
            type="id.bluebird.vsm.feature.home.queue_search.QueueSearchViewModel" />

        <variable
            name="state"
            type="id.bluebird.vsm.feature.home.queue_search.QueueSearchState" />

        <import type="id.bluebird.vsm.feature.home.queue_search.QueueSearchState" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/search_page"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12sp"
            android:background="@drawable/bg_stock_request"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:layout_marginHorizontal="16dp"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/prefix_pages"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="@string/queue"
                android:textColor="@color/gray_subtitle"
                android:textSize="18dp"
                android:textStyle="bold" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/search_form"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="7"
                android:background="@null"
                android:fontFamily="@font/ubuntu_regular"
                android:hint="@string/hint_queue_search"
                android:imeOptions="actionDone"
                android:inputType="number"
                android:lines="1"
                android:maxLength="7"
                android:maxLines="1"
                android:paddingStart="8dp"
                android:text="@={vm.params}"
                android:textSize="18dp" />

            <ImageButton
                android:id="@+id/clear_search"
                style="?android:buttonBarButtonStyle"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginRight="10dp"
                android:onClick="@{()->vm.clearSearch()}"
                android:paddingBottom="5dp"
                android:src="@drawable/ic_cross_disable" />

        </androidx.appcompat.widget.LinearLayoutCompat>

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/filter_page"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            app:layout_constraintTop_toBottomOf="@+id/search_page"
            app:selectionRequired="true"
            app:singleSelection="true">

            <com.google.android.material.chip.Chip
                android:id="@+id/filter_all"
                style="@style/CustomeChipStyleSuccess"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/all_text" />

            <com.google.android.material.chip.Chip
                android:id="@+id/filter_waiting"
                style="@style/CustomeChipStylePrimary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/waiting_label_text" />

            <com.google.android.material.chip.Chip
                android:id="@+id/filter_skipped"
                style="@style/CustomeChipStyleWarning"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tertunda_text" />

        </com.google.android.material.chip.ChipGroup>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/filter_page"
            android:fillViewport="true">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="120dp"
                    android:gravity="center_horizontal"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    bindVisibility="@{state instanceof QueueSearchState.Idle ? true : false}"
                    android:text="@string/search_queue_message" />

                <LinearLayout
                    bindVisibility="@{state instanceof QueueSearchState.OnError ? true : false}"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="120dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:src="@drawable/bg_queue_not_found" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="@string/search_queue_search_more_character"
                        android:textColor="@color/danger_1" />
                </LinearLayout>

                <ProgressBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    bindVisibility="@{state instanceof QueueSearchState.ProsesSearchQueue ? true : false}"
                    android:layout_marginTop="120dp" />

                <LinearLayout
                    bindVisibility="@{state instanceof QueueSearchState.ErrorFilter ? true : false}"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="120dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:src="@drawable/bg_queue_not_found" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="@string/search_no_queue"
                        android:textColor="@color/gray_subtitle" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingHorizontal="15dp">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recycler_view_queue"
                        bindVisibility="@{state instanceof QueueSearchState.FilterResult ? true : false}"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:scrollbars="none" />
                </LinearLayout>

            </androidx.appcompat.widget.LinearLayoutCompat>

        </androidx.core.widget.NestedScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>