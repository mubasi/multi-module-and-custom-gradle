<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="showProses"
            type="boolean" />
        <variable
            name="vm"
            type="id.bluebird.vsm.feature.home.dialog_restore_skipped.DialogRestoreSkippedViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/rounded_dialog"
        android:paddingBottom="20dp">

        <TextView
            android:id="@+id/title_dialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"/>

        <TextView
            android:id="@+id/desc_restore_dialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/title_dialog"
            android:textSize="16dp"
            android:text="@string/desc_dialog_skipped_text"
            android:textColor="@color/black"
            android:paddingBottom="15dp"/>

        <ProgressBar
            android:id="@+id/progress_dialog"
            bindVisibility="@{showProses}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="30dp"
            android:paddingTop="30dp"
            android:layout_gravity="center_vertical|center_horizontal"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="2"
            bindVisibility="@{!showProses}"
            app:layout_constraintTop_toBottomOf="@+id/desc_restore_dialog">

            <androidx.appcompat.widget.AppCompatButton
                android:layout_weight="1"
                android:id="@+id/btn_cancel_bottom_sheet_action"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:background="@drawable/bg_cancel_bottom_sheet_action"
                android:text="@string/cancel"
                android:textAllCaps="false"
                android:onClick="@{()->vm.restoreSkipped()}"
                android:textColor="@color/primary_color" />

            <androidx.appcompat.widget.AppCompatButton
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:id="@+id/btn_proses_bottom_sheet_action"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_button_enable_login"
                android:text="@string/recovery_text"
                android:textAllCaps="false"
                android:onClick="@{()->vm.prosesRestore()}"
                android:textColor="@color/white" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>