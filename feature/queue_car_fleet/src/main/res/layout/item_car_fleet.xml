<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="fleet"
            type="id.bluebird.vsm.feature.queue_car_fleet.model.CarFleetItem" />

        <variable
            name="vm"
            type="androidx.lifecycle.ViewModel" />

        <import type="android.view.View" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp">

        <LinearLayout
            android:id="@+id/cl_info_car_assignment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/sequence_text"
                android:layout_width="@dimen/width_sequence"
                android:layout_height="@dimen/height_item_car_list"
                android:layout_marginHorizontal="@dimen/margin_sequence"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="20sp"
                android:text="@{String.valueOf(fleet.sequence)}"
                android:textColor="@android:color/black"/>

            <LinearLayout
                android:id="@+id/ll_car_info_assignment"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/height_item_car_list"
                android:layout_marginEnd="@dimen/margin_sequence"
                android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/ubuntu_bold"
                    android:text="@{fleet.name}"
                    android:textColor="@android:color/black" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:fontFamily="@font/ubuntu_regular"
                    android:lineHeight="18sp"
                    android:text="@{fleet.arriveAt}"
                    android:textSize="12sp" />

            </LinearLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_assign_car"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_item_car_list"
                android:layout_marginLeft="@dimen/height_item_car_list"
                android:background="@drawable/bg_depart_fleet"
                android:fontFamily="@font/ubuntu_bold"
                android:lineHeight="21sp"
                android:maxWidth="96dp"
                android:minWidth="48dp"
                android:text="@string/depart"
                bindingVm="@{vm}"
                bindFleetItem="@{fleet}"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="@color/primary_0"
                android:textSize="14sp" />

        </LinearLayout>

        <View
            android:id="@+id/view_car_assignment"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginTop="16dp"
            android:background="@color/grey_line"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cl_info_car_assignment" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
