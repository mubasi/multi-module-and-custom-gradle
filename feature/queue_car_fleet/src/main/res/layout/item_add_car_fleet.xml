<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="fleetNumber"
            type="String" />

        <variable
            name="position"
            type="Integer" />

        <import type="android.view.View" />

        <variable
            name="vm"
            type="id.bluebird.vsm.feature.queue_car_fleet.add_fleet.AddCarFleetViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:onClick="@{() -> vm.updateSelectedFleetNumber(fleetNumber, position)}"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:fontFamily="@font/ubuntu_regular"
            android:paddingStart="4dp"
            android:text="@{fleetNumber}"
            android:textColor="@color/gray_tile"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@id/viewItemAddFleet"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/iconSelectedItemAddFleet"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iconSelectedItemAddFleet"
            bindingVm="@{vm}"
            valueCheckList="@{fleetNumber}"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:paddingEnd="4dp"
            android:src="@drawable/ic_selected_item_fleet"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintBottom_toTopOf="@id/viewItemAddFleet"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/viewItemAddFleet"
            android:layout_width="match_parent"
            android:layout_height="1.5dp"
            android:background="@color/gray_line"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
